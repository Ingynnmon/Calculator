<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainRel">

    <EditText
            android:paddingTop="90dp"
            android:layout_margin="5dp"
            android:textSize="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:gravity="right"
            android:hint="0"
            android:ems="10"
            android:id="@+id/editText"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/secRel"
            android:layout_below="@id/editText"
            android:paddingBottom="15dp"
            android:gravity="bottom">
        ////first row
        <Button
                android:layout_marginLeft="5dp"
                android:text="AC"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/ac"/>
        <Button
                android:text="del"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/del"
                android:layout_toRightOf="@id/ac"/>
        <Button
                android:text="%"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/percent"
                android:layout_toRightOf="@id/del"/>
        <Button
                android:text="/"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/div"
                android:layout_toRightOf="@id/percent"/>

        ////second row
        <Button
                android:layout_marginLeft="5dp"
                android:text="7"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/seven"
                android:layout_below="@id/ac"/>
        <Button
                android:text="8"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/eight"
                android:layout_toRightOf="@id/seven"
                android:layout_below="@id/del"/>
        <Button
                android:text="9"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/nine"
                android:layout_toRightOf="@id/eight"
                android:layout_below="@id/percent"/>
        <Button
                android:text="x"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/mul"
                android:layout_toRightOf="@id/nine"
                android:layout_below="@id/div"/>

        ///third row
        <Button
                android:layout_marginLeft="5dp"
                android:text="4"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/four"
                android:layout_below="@id/seven"/>
        <Button
                android:text="5"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/five"
                android:layout_toRightOf="@id/four"
                android:layout_below="@id/eight"/>
        <Button
                android:text="6"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/six"
                android:layout_toRightOf="@id/five"
                android:layout_below="@id/nine"/>
        <Button
                android:text="-"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/minus"
                android:layout_toRightOf="@id/six"
                android:layout_below="@id/mul"/>

        ///fourth row
        <Button
                android:layout_marginLeft="5dp"
                android:text="1"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/one"
                android:layout_below="@id/four"/>
        <Button
                android:text="2"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/two"
                android:layout_toRightOf="@id/one"
                android:layout_below="@id/five"/>
        <Button
                android:text="3"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/three"
                android:layout_toRightOf="@id/two"
                android:layout_below="@id/six"/>
        <Button
                android:text="+"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/plus"
                android:layout_toRightOf="@id/three"
                android:layout_below="@id/minus"/>

        ///fifth row
        <Button
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/change"
                android:layout_below="@id/one"/>
        <Button
                android:text="0"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/zero"
                android:layout_toRightOf="@id/change"
                android:layout_below="@id/two"/>
        <Button
                android:text="."
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/deci"
                android:layout_toRightOf="@id/zero"
                android:layout_below="@id/three"/>
        <Button
                android:text="="
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:id="@+id/equal"
                android:layout_toRightOf="@id/deci"
                android:layout_below="@id/plus"/>

    </RelativeLayout>


</RelativeLayout>